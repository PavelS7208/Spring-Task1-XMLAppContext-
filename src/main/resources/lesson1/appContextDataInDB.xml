<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="storage"
          class="ru.pavel.OTR_Training.spring.lesson1.storage.Storage"
          abstract="true">
    </bean>


    <bean id="dbStorage"
          class="ru.pavel.OTR_Training.spring.lesson1.storage.DBStorage" parent="storage"
          destroy-method="destroy">
        <property name="storageType" value="DataFromH2"/>
    </bean>


    <bean id="productService"
          class="ru.pavel.OTR_Training.spring.lesson1.service.ProductService">
        <constructor-arg ref="dbStorage"/>
    </bean>

    <bean id="cartService"
          class="ru.pavel.OTR_Training.spring.lesson1.service.CartService">
        <constructor-arg type="ru.pavel.OTR_Training.spring.lesson1.service.UserService" ref="userService"/>
    </bean>


    <bean id="userService"
          class="ru.pavel.OTR_Training.spring.lesson1.service.UserService">
        <constructor-arg ref="dbStorage"/>
    </bean>

    <bean id="orderService" class="ru.pavel.OTR_Training.spring.lesson1.service.OrderService" scope="prototype"/>

</beans>

